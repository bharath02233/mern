html 
  head 
     title register 
     link( rel='stylesheet' href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
     script(src="/utlis.js")
  body 
    div(class="d-flex justify-content-center align-items-center h-75 ")
        form(onsubmit="addRegister(event)" class="border rounded border-primary p-3 w-25 ")
           
            label(for="i1" class="d-block text-center text-primary") ENTER NAME:
            input(id="i1" type="text" name="name" style="width:200px" class="form-control mx-auto")
            br
            label(for="i3" class="d-block text-center text-primary") ENTER EMAIL:
            input(id="i3" type="email" name="email" style="width:200px" class="form-control mx-auto")
            br
            label(for="i2" class="d-block text-center text-primary") ENTER PASSWORD:
            input(id="i2" type="text" name="password" style="width:200px" class="form-control mx-auto")
            br
            div(class="d-flex justify-content-center")
              button(class="btn btn-primary") Register 
            