html 
   head
       title enqForm 
       link( rel='stylesheet' href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
       script(src="/utlis.js")
   body()
     div(class="text-center  mt-4 ")
       marquee(class="fs-1  w-25 text-secondary") ENQUIRY FORUM
     div(class="d-flex justify-content-center align-items-center h-75 ")
      
       
        form(onsubmit="add(event)" class="border rounded border-primary p-3 w-25 ")
           
            label(for="i1" class="d-block text-center text-primary") ENTER NAME:
            input(id="i1" type="text" name="name" style="width:200px" class="form-control mx-auto")
            br
            label(for="i2" class="d-block text-center text-primary") ENTER MOBILE:
            input(id="i2" type="text" name="mobile" style="width:200px" class="form-control mx-auto")
            br
        
            label(for="i3" class="d-block text-center text-primary") ENTER EMAIL:
            input(id="i3" type="email" name="email" style="width:200px" class="form-control mx-auto")
            br
        
            label(for="i4" class="d-block text-center text-primary") SELECT COURSE:
            select(id="i4" name="course"  style="width:200px"  class="form-select  mx-auto")
                option(disabled selected value="" ) 
                option(value="FRONTEND WITH REACT" ) Frontend with reactjs
                option(value="BACKEND WITH NODE EXPRESS MONGO" ) Backend with mongo express node
                option(value="FULLSTACK MERN" ) FULLSTACK MERN
                option(value="JAVA FULLSTACK" ) JAVA FULLSTACK
                option(value="PYTHON FULLSTACK") JAVA FULLSTACK
            br
            div(class="d-flex justify-content-center")
             button(class="btn btn-outline-primary") Submit


